<%= back_link_to budgets_admin_stats_path %>

<h2><%= @budget.name %> - <%= t("admin.stats.budget_balloting.title")%></h2>

<div class="stats">
  <div class="row stats-numbers">
    <div class="small-12 medium-3 column">
      <p class="featured">
        <%= t("admin.stats.budget_balloting.vote_count") %>
        <br>
        <span id="total_votes_count" class="number">
          <%= @vote_count %>
        </span>
      </p>
    </div>

    <div class="small-12 medium-6 column end">
      <p>
        <%= t("admin.stats.budget_balloting.participant_count") %>
        <br>
        <span id="total_participants_count" class="number">
          <%= @user_count %>
        </span>
      </p>
    </div>
  </div>
</div>

<table class="investment-projects-summary">
  <tr id="city_voters">
    <td class="name">
      <%= t("admin.stats.budget_balloting.users_city_total") %>
    </td>
    <td class="name">
    <%= number_with_delimiter @user_count_in_city %>
    </td>
  </tr>

  <tr id="district_voters">
    <td class="name">
       <%= t("admin.stats.budget_balloting.users_district_total") %>
    </td>
    <td class="name">
      <%= number_with_delimiter @user_count_in_district %>
    </td>
  </tr>

  <tr id="in_both_voters">
    <td class="name">
      <%= t("admin.stats.budget_balloting.users_both_total") %>
    </td>
    <td class="name">
    <%= number_with_delimiter(@user_count_in_city_and_district) %>
    </td>
  </tr>

</table>

<% if @vote_count_by_heading.present? %>
  <table class="investment-projects-summary">
    <th colspan="2"><%= t("admin.stats.budget_balloting.votes_per_heading") %></th>

    <% @vote_count_by_heading.each_pair do |heading_name, count| %>
      <tr id="vote_count_<%= heading_name.parameterize %>">
        <td class="name">
          <%= heading_name %>
        </td>
        <td class="name">
          <%= number_with_delimiter count %>
        </td>
      </tr>
    <% end %>
  </table>
<% end %>

<% if @user_count_by_district.present? %>
  <table class="investment-projects-summary">
    <th colspan="2"><%= t("admin.stats.budget_balloting.participants_per_district") %></th>

    <% @user_count_by_district.each_pair do |heading_name, count| %>
      <tr id="user_count_<%= heading_name.parameterize %>">
        <td class="name">
          <%= heading_name %>
        </td>
        <td class="name">
          <%= number_with_delimiter count %>
        </td>
      </tr>
    <% end %>
  </table>
<% end %>

